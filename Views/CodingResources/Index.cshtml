@model IEnumerable<ua_acm_website.Models.CodingResource>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Coding Resources</h1>

@if (User.IsInRole(SD.Admin) || User.IsInRole(SD.Officer))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Resource)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TopicCovered)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicableClasses)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResourceLink)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Resource)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TopicCovered)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicableClasses)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResourceLink)
            </td>
            @if (User.IsInRole(SD.Admin) || User.IsInRole(SD.Officer))
            {
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            }
            </tr>
        }
    </tbody>
</table>
