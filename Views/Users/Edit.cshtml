@model ua_acm_website.Models.ViewModels.RoleUserVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Member</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AppUser.Id" />
            <div class="form-group">
                <label asp-for="AppUser.Email" class="control-label"></label>
                <input asp-for="AppUser.Email" class="form-control" />
                <span asp-validation-for="AppUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppUser.LastName" class="control-label">Last Name</label>
                <input asp-for="AppUser.LastName" class="form-control" />
                <span asp-validation-for="AppUser.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppUser.FirstName" class="control-label">First Name</label>
                <input asp-for="AppUser.FirstName" class="form-control" />
                <span asp-validation-for="AppUser.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppUser.Position" class="control-label"></label>
                <input asp-for="AppUser.Position" class="form-control" />
                <span asp-validation-for="AppUser.Position" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="AppUser.DuesPaid" /> Dues Paid
                </label>
            </div>
            <div class="form-group">
                <label asp-for="AppUser.MeetingsAttended" class="control-label">Meetings Attended</label>
                <input asp-for="AppUser.MeetingsAttended" class="form-control" />
                <span asp-validation-for="AppUser.MeetingsAttended" class="text-danger"></span>
            </div>
            <div class="form-group">
                @foreach (var item in Model.AllRoles)
                {
                    <tr>
                        <td class="js-export-checkbox">
                            <input name="CheckRoles" type="checkbox" @(Model.UserRoles.Contains(item) ? "checked" : "") value="@item" /> @item<br />
                        </td>
                    </tr>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
